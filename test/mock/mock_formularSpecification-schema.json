    {
        "id": "http://awesome.idp.de/entry-schema#",
        "$schema": "http://json-schema.org/draft-04/schema#",
        "description": "schema for the FormularSpecification",
        "definitions": {
            "elementId": { "type": "string" },
            "mappingKey": { "type": "string" },
            "elementType": { "type": "string" },
            "repeatable": { "type": "boolean" },
            "length": { "type": "integer" },
            "label": { "type": "string" },
            "content": { "type": "string" },
            "placeholder": { "type": "string" },
            "defaultOption": { "type": "integer" },
            "dateFormat": {
                "type": "string",
                "default": "DD/MM/YYYY"
            },
            "minDate": {
                "type": "string",
                "default": "01.01.1900"
            },
            "option": {
                "type": "object",
                "properties": {
                    "elementId": { "$ref": "#/definitions/elementId" },
                    "label": { "$ref": "#/definitions/label" }
                },
                "required": ["elementId", "label"]
            },
            "options": {
                "type": "array",
                "items": { "$ref": "#/definitions/option" },
                "minItems": 1,
                "uniqueItems": true
            },
            "validator": {
                "type": "object",
                "properties": {
                    "elementId": { "$ref": "#/definitions/elementId" }
                }
            },
            "validators": {
                "type": "array",
                "items": { "$ref": "#/definitions/validator" }
            },
            "interactiveDetails": {
                "type": "object",
                "properties": {
                    "label": { "$ref": "#/definitions/label" },
                    "length": { "$ref": "#/definitions/length" },
                    "placeholder": { "$ref": "#/definitions/placeholder" },
                    "textfieldType": {
                        "enum": [ "text", "password", "number" ]
                    },
                    "dateFormat": { "$ref": "#/definitions/dateFormat" },
                    "minDate": { "$ref": "#/definitions/minDate" },
                    "options": { "$ref": "#/definitions/options" },
                    "defaultOption": { "$ref": "#/definitions/defaultOption" }
                },
                "required": ["label"]
            },
            "interactive": {
                "type": "object",
                "properties": {
                    "elementId": { "$ref": "#/definitions/elementId" },
                    "elementType": { "$ref": "#/definitions/elementType" },
                    "mappingKey": { "$ref": "#/definitions/mappingKey" },
                    "validators": { "$ref": "#/definitions/validators" },
                    "interactiveDetails" : { "$ref": "#/definitions/interactiveDetails" }
                },
                "required": ["elementId", "elementType", "mappingKey", "validators"]
            },
            "interactives": {
                "type": "array",
                "items": { "$ref": "#/definitions/interactive" }
            },
            "description": {
                "type": "object",
                "properties": {
                    "elementId": { "$ref": "#/definitions/elementId" },
                    "content": { "$ref": "#/definitions/content" },
                    "descriptionType": {
                        "enum": [ "text", "image", "number" ]
                    }
                },
                "required": ["elementId", "content", "descriptionType"]
            },
            "descriptions": {
                "type": "array",
                "items": { "$ref": "#/definitions/description" }
            },
            "children": {
                "type": "array",
                "items": { 
                    "anyOf": [
                        { "$ref": "#/definitions/group" },
                        { "$ref": "#/definitions/question" }
                    ]
                },
                "minItems": 1
            },
            "question": {
                "type": "object",
                "properties": {
                    "elementId": { "$ref": "#/definitions/elementId" },
                    "elementType": { "$ref": "#/definitions/elementType" },
                    "descriptions": { "$ref": "#/definitions/descriptions" },
                    "interactives": { "$ref": "#/definitions/interactives" }
                },
                "required": ["elementId", "descriptions", "interactives"]
            },
            "group": {
                "type": "object",
                "properties": {
                    "elementId": { "$ref": "#/definitions/elementId" },
                    "elementType": { "$ref": "#/definitions/elementType" },
                    "descriptions": { "$ref": "#/definitions/descriptions" },
                    "repeatable": { "$ref": "#/definitions/repeatable" },
                    "children": { "$ref": "#/definitions/children"}
                },
                "required": ["elementId", "descriptions", "children"]
            }
        },
        "type": "object",
        "properties": {
            "elementId": { "$ref": "#/definitions/elementId" },
            "elementType": { "$ref": "#/definitions/elementType" },
            "description": { "$ref": "#/definitions/descriptions" },
            "children": { "$ref": "#/definitions/children" }
        },
        "required": [
            "elementId",
            "elementType",
            "metadata",
            "descriptions",
            "children"
        ]
    }