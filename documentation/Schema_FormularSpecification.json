    {
        "id": "http://awesome.idp.de/entry-schema#",
        "$schema": "http://json-schema.org/draft-04/schema#",
        "description": "schema for the FormularSpecification",
        "definitions": {
            "element_id": { "type": "string" },
            "mapping_key": { "type": "string" },
            "repeatable": { "type": "boolean" },
            "expression": { "type": "string" },
            "length": { "type": "integer" },
            "label": { "type": "string" },
            "text": { "type": "string" },
            "url": { "type": "string" },
            "placeholder": { "type": "string" },
            "default_option": { "type": "integer" },
            "date_format": {
                "format": "string",
                "default": "DD/MM/YYYY"
            },
            "option": {
                "type": "object",
                "properties": {
                    "element_id": { "$ref": "#/definitions/element_id" },
                    "label": { "$ref": "#/definitions/label" },
                    "value": { "$ref": "#/definitions/label" }
                },
                "required": ["element_id", "label"]
            },
            "options": {
                "type": "array",
                "items": { "$ref": "#/definitions/option" },
                "minItems": 1,
                "uniqueItems": true
            },
            "validator": {
                "type": "object",
                "properties": {
                    "element_id": { "$ref": "#/definitions/element_id" },
                    "validator_name": { "$ref": "#/definitions/label" },
                    "validator_type" : { 
                        "enum": [ "isRequired", "minLength", "maxLength", "minDate", "maxDate", "custom" ]
                    },
                    "expression": { "$ref": "#/definitions/expression" }
                },
                "required": ["element_id", "validator_type"]
            },
            "validators": {
                "type": "array",
                "items": { "$ref": "#/definitions/validator" },
                "minItems": 1,
                "uniqueItems": true
            },
            "interactive_details": {
                "type": "object",
                "properties": {
                    "label": { "$ref": "#/definitions/label" },
                    "post_label": { "$ref": "#/definitions/label" },
                    "length": { "$ref": "#/definitions/length" },
                    "placeholder": { "$ref": "#/definitions/placeholder" },
                    "input_type": {
                        "enum": [ "text", "password", "number" ]
                    },
                    "date_format": { "$ref": "#/definitions/date_format" },
                    "options": { "$ref": "#/definitions/options" },
                    "default_option": { "$ref": "#/definitions/default_option" }
                }
            },
            "interactive": {
                "type": "object",
                "properties": {
                    "element_id": { "$ref": "#/definitions/element_id" },
                    "element_type": "interactive",
                    "interactive_type": {
                        "enum": [ "textarea", "input", "date", "number", "radio", "dropdown", "checkbox" ]
                    },
                    "mapping_key": { "$ref": "#/definitions/mapping_key" },
                    "validators": { "$ref": "#/definitions/validators" },
                    "interactive_details" : { "$ref": "#/definitions/interactive_details" }
                },
                "required": ["element_id", "element_type", "mapping_key", "validators"]
            },
            "urls": {
                "type": "array",
                "items": { "$ref": "#/definitions/url" }
            },
            "description": {
                "type": "object",
                "properties": {
                    "element_id": { "$ref": "#/definitions/element_id" },
                    "element_type": "description",
                    "text": { "$ref": "#/definitions/text" },
                    "urls": {"$ref": "#/definitions/urls"},
                    "description_type": {
                        "enum": [ "text", "image", "video" ]
                    }
                },
                "required": ["element_id", "element_type", "description_type"]
            },
            "children": {
                "type": "array",
                "items": { 
                    "anyOf": [
                        { "$ref": "#/definitions/container" },
                        { "$ref": "#/definitions/description" },
                        { "$ref": "#/definitions/interactive" },
                    ]
                },
                "minItems": 1
            },
            "container": {
                "type": "object",
                "properties": {
                    "element_id": { "$ref": "#/definitions/element_id" },
                    "element_type": "container",
                    "repeatable": { "$ref": "#/definitions/repeatable" },
                    "children": { "$ref": "#/definitions/children"}
                },
                "required": ["element_id", "element_type", "children"]
            }
        },
        "type": "object",
        "properties": {
            "element_id": { "$ref": "#/definitions/element_id" },
            "element_type": { "$ref": "#/definitions/element_type" },
            "children": { "$ref": "#/definitions/children" }
        },
        "required": [
            "element_id",
            "element_type",
            "children"
        ]
    }